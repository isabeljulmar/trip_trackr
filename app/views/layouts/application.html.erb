<!DOCTYPE html>
<html>
  <head>
    <title>TripTrackr</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>

    <nav class="navbar navbar-expand-sm bg-dark">
      <div class="navbar-brand">
        <%= link_to trips_path, id:'logo-link' do %>
          <%= image_tag(('logo-nav-bar.png'), id: 'nav-logo-img') %>
        <% end %>
      </div>
      <div class="nav-menu ml-auto">
        <ul class="navbar-nav">
          <li class="nav-item">
            <%= link_to 'All', trips_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'New', new_trip_path, class: 'nav-link' %>
          </li>
        </ul>
      </div>
    </nav>

    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>"><%= value %></div>
    <% end %>
    <%= yield %>

  </body>
</html>
