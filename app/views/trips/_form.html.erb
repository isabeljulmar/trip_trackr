<%= form_for @trip do |f| %>
  <%= f.label :trip_name, 'Adventure Name' %>
  <%= f.text_field :trip_name, required: true, autofocus: true %> <br> <!--RAS-->
  <%= f.label :trip_duration, 'Duration' %>
  <%= f.number_field :trip_duration, class: 'text-right', required: true %> parsecs <br><!--RAS-->
  <%= f.submit %>
<% end %>
